{
  "expo": {
    "name": "Mizan Money",
    "slug": "mizan-banking-app",
    "version": "1.0.0",
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "experiments": {
      "tsconfigPaths": true
    },
    "plugins": [
      [
        "expo-font",
        {
          "fonts": ["node_modules/@expo-google-fonts/poppins/Poppins_900Black.ttf"]
        }
      ]
    ],
    "orientation": "portrait",
    "icon": "./assets/gradient-logo.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/gradient-logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#8A2BE2"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    }
  }
}
